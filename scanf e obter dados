#include<stdio.h>
#include<math.h>
\\ as variaveis sao inteiros
int main() {
  int base;
  int altura;
  int area;
  printf("a base é:");
  scanf("%i", &base);

  printf("a altura é:");
  scanf("%i",&altura);
  area = base * altura;
  printf("a area é %i", area);
return 0;
}

#include<stdio.h>
#include<math.h>
\\ ja aqui as variaveis sao fracionarios
int main() {
  float base;
  float altura;
  float area;
  printf("a base é:");
  scanf("%f", &base);

  printf("a altura é:");
  scanf("%f",&altura);
  area = base * altura;
  printf("a area é %f", area);
return 0;
}
